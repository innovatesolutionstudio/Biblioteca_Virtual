<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ISS Virtual Library - Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/login/login.css">
</head>

<body>
    <div class="container">
        <div class="login-form">
            <div class="logo">
                <img src="/img/logo.png"
                    alt="ISS Logo" width="40" />
            </div>
            <h2>¡Registrate!</h2>
            <p>Completa todos los campos para crear tu cuenta.</p>
            <div class="form-group">
                <label for="email">Nombre</label>
                <input type="text" id="nombre" value="Juan Perez" />
            </div>
            <div class="form-group">
                <label for="email">Correo</label>
                <input type="email" id="email" value="robert.langster@gmail.com" />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" value="*********" />
            </div>
            
            <div class="form-buttons">
                <a class="login-btn">Registrarse</a>
               
            </div>
        </div>
        <div class="carousel">
            <img id="carousel-image" src="/img/login/img_login1.png" alt="Slide 1" />
            <div class="dots">
                <span class="dot active" onclick="changeSlide(0)"></span>
                <span class="dot" onclick="changeSlide(1)"></span>
                <span class="dot" onclick="changeSlide(2)"></span>
            </div>
        </div>
    </div>

    <script>
        const images = [
            '/img/login/img_login1.png',
            '/img/login/img_login2.png',
            '/img/login/img_login3.png'
        ];

        let currentIndex = 0;
        const carouselImage = document.getElementById('carousel-image');
        const dots = document.querySelectorAll('.dot');

        function changeSlide(index) {
            currentIndex = index;
            carouselImage.src = images[currentIndex];
            dots.forEach((dot, i) => {
                dot.classList.toggle('active', i === index);
            });
        }

        setInterval(() => {
            currentIndex = (currentIndex + 1) % images.length;
            changeSlide(currentIndex);
        }, 4000);
    </script>
</body>

</html>